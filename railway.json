{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "startCommand": "gunicorn app:app -w 4 -b 0.0.0.0:$PORT"
  },
  "healthCheck": {
    "enabled": true,
    "interval": 10,
    "timeout": 5,
    "httpPath": "/healthz"
  }
}
